<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/textViewFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewPlaceAndDateOfBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place and Date of Birth" />

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address" />

    <TextView
        android:id="@+id/textViewReligion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Religion" />

    <TextView
        android:id="@+id/textViewPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone" />

    <TextView
        android:id="@+id/textViewEntryAndGraduationYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entry and Graduation Year" />

    <TextView
        android:id="@+id/textViewOccupationAndPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Occupation and Position" />

</LinearLayout>
